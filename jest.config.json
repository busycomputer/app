{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "moduleDirectories": ["node_modules", "<rootDir>/src"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "transform": {
    "^.+\\.tsx?$": ["ts-jest", {
      "tsconfig": "tsconfig.json"
    }]
  },
  "setupFiles": ["<rootDir>/jest.setup.js"]
}
