{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.7/.schema/devbox.schema.json",
  "packages": [
    "nodejs_22@latest",
    "corepack@latest",
    "coreutils@latest",
    "act@latest",
    "docker@latest",
    "toml-cli@latest",
    "supabase-cli@latest"
  ],
  "env": {},
  "shell": {
    "init_hook": ["export PATH=$(pwd)/node_modules/.bin:$PATH"],
    "scripts": {
      "init": [
        "corepack install",
        "alias pnpm='corepack pnpm'",
        "alias pnpx='corepack pnpx'",
        "pnpm install --force",
        "pnpx supabase start",
        "pnpm types --if-present",
        "pnpm run format --if-present",
        "pnpm run lint --if-present",
        "pnpm run build --if-present",
        "pnpm run test --if-present"
      ],
      "dev":  ["pnpx inngest dev & pnpm dev"],
      "test": ["act push -j test"]
    }
  }
}
